@model IEnumerable<USANDROCRUD_Validaciones2404.Models.Libro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container pt-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Libros</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Libro" asp-action="Crear" class="btn btn-primary">Nuevo Libro</a>
        </div>
    </div>

    <br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Tema</th>
                    <th>Editorial</th>
                    <th>Año de Publicación</th>
                    <th>Páginas</th>
                    <th>Categoría</th>
                    <th>Material</th>
                    <th>Copias</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Titulo</td>
                        <td>@item.Autor</td>
                        <td>@item.Tema</td>
                        <td>@item.Editorial</td>
                        <td>@item.AnioPublicacion</td>
                        <td>@item.Paginas</td>
                        <td>@item.Categoria</td>
                        <td>@item.Material</td>
                        <td>@item.Copias</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Libro" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-1">Editar</a>
                                <a asp-controller="Libro" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-1">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de libros.</p>
    }
</div>
